        </div>


        @foreach (var item in Model)
        {
    <center>
        <div class="row" style="margin:300px">
            <div class="col-12">
                <img src="/assets/img/12.jpg" class="=image-fluid" style=" height:200px;width:200px" alt="">
            </div>
