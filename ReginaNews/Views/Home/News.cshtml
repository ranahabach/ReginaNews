


@model List<News>

<section id="News" class="News">
            <div class="container" data-aos="fade-up">  
            <div class="section-title">
                <h2>News</h2>
            </div>

            @foreach (var item in Model)
            {
                <center>
                    <div class="row" style="margin:100px">
                        <div class="col-12">
                            


                            <img src="/assets/img/news/@item.Image" class="=image-fluid" style=" height:300px;width:300px"  >
                        </div>
                        <div class="col-lg-12">
                            <h3>@item.Title</h3>
                            <div class="alert-warning p-auto">
                                <h4>@item.Date</h4>
                            </div>
                                <p class="fount-italic">
                                    <div class="alert-info p-auto">
                                        @item.Topic
                                    </div>
                                </p>
                            </div>
                        </div>
                    <center>
                        <a class="btn btn-danger text-center text-yallow " style="height:30px;width:100px " href="/Home/DeletNews/@item.Id"><b>Delet</b></a>
                    </center>
                    <hr />
                </center>

            }



        </div>                    }
