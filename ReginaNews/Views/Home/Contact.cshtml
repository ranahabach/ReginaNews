




<!-- ======= Contact Section ======= -->

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            <p</p>
        </div>

    </div>

   

    <div class="container">

        <div class="row mt-5">

            <div class="col-lg-6">

                <div class="row">
                    <div class="col-md-12">
                        <div class="info-box">
                            <i class="bx bx-map"></i>
                            <h3>Our Address</h3>
                            <p> A108 Cade Street </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4">
                            <i class="bx bx-envelope"></i>
                            <h3>Email Us</h3>
                            <p>info@ReginaNews.ca<br></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4">
                            <i class="bx bx-phone-call"></i>
                            <h3>Call Us</h3>
                            <p>+1 5589 55488 55<br>+1 6678 254445 41</p>
                        </div>
                    </div>
                </div>

            </div>
            @model ContactUs
            <div class="col-lg-6">
                <form asp-action="SaveContact">
                    <div class="row">
                        <div class="col form-group">
                            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="col form-group mt-3">
                            <input type="email" class="form-control" asp-for="Email" placeholder="Your Email" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" asp-for="Subject" placeholder="Subject" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="Message" rows="5" placeholder="Message" required></textarea>
                    </div>
                    <div class="my-3">
                        <div class="loading"></div>
                        <div class="error-message"></div>
                        <div class="sent-message"> Thank you!</div>
                    </div>
                    <div class="text-center"><button class="btn btn-success " type="submit">Send Message</button></div>
                   
                </form>
            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
