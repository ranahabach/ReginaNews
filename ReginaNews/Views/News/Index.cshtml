@model IEnumerable<ReginaNews.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container p-auto">

    <p>
        <a asp-action="Create" class="btn-success">Create New</a>
    </p>
    <table class="table accordion-body">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td style="width:25%">
                        @Html.DisplayFor(modelItem => item.Topic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-dark">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"  class="btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
